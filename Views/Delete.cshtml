@model InterviewTasks2023.Models.Book 
@{  
    Layout = null;  
}  
<!DOCTYPE html>  
<html>  
<head>  
    <meta name="viewport" content="width=device-width" />  
    <title>Delete</title>  
</head>  
<body>  
    <h3 style="color:Red">Do You Want To Remove This Record?</h3>  
    @using (Html.BeginForm())  
    {  
        <fieldset>  
            <legend style="font-family:Arial Black;color:Green">Book</legend>  
            @Html.HiddenFor(model => model.Code)  
            <div class="display-label" style="font-family:Arial Black">  
                @Html.DisplayNameFor(model => model.BookName)  
            </div>  
            <div class="display-field" style="color:Blue">  
                @Html.DisplayFor(model => model.BookName)  
            </div>  
            <div class="display-label" style="font-family:Arial Black">  
                @Html.DisplayNameFor(model => model.Author)  
            </div>  
            <div class="display-field" style="color:Blue">  
                @Html.DisplayFor(model => model.Author)  
            </div>  
            <div class="display-label" style="font-family:Arial Black">  
                @Html.DisplayNameFor(model => model.IsAvailable)  
            </div>  
            <div class="display-field" style="color:Blue">  
                @Html.DisplayFor(model => model.IsAvailable)  
            </div>  
            <div class="display-label" style="font-family:Arial Black">  
                @Html.DisplayNameFor(model => model.Price)  
            </div>  
            <div class="display-field" style="color:Blue">  
                @Html.DisplayFor(model => model.Price)  
            </div>  
  
            <div class="display-label" style="font-family:Arial Black">  
                @Html.DisplayNameFor(model => model.ShelfId)  
            </div>  
            <div class="display-field" style="color:Blue">  
                @Html.DisplayFor(model => model.ShelfId)  
            </div>  
            <p>  
                <input id="Submit1" onclick="return confirm('Are You Sure To Remove ?')"  
                       type="submit" value="Remove" style="color:Navy;font-family:Arial; font-size:large" />  
            </p>  
        </fieldset>  
    }  
    <div style="color:Blue;font-family:Arial">  
        @Html.ActionLink("Back to Book Records", "ShowAllBookDetails")  
    </div>  
</body>  
</html>  