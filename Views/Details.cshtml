@model InterviewTasks2023.Models.Book
@{  
    Layout = null;  
}  
  
<!DOCTYPE html>  
  
<html>  
<head>  
    <meta name="viewport" content="width=device-width" />  
    <title>Details</title>  
</head>  
<body>  
    <fieldset>  
        <legend style="font-family:Arial Black;color:Green">Book Report</legend>  
  
        <div class="display-label" style="font-family:Arial Black">  
            @Html.DisplayNameFor(model => model.BookName)  
        </div>  
        <div class="display-field" style="color:Blue">  
            @Html.DisplayFor(model => model.BookName)  
        </div>  
  
        <div class="display-label" style="font-family:Arial Black">  
            @Html.DisplayNameFor(model => model.Author)  
        </div>  
        <div class="display-field" style="color:Blue">  
            @Html.DisplayFor(model => model.Author)  
        </div>  
  
        <div class="display-label" style="font-family:Arial Black">  
            @Html.DisplayNameFor(model => model.IsAvailable)  
        </div>  
        <div class="display-field" style="color:Blue">  
            @Html.DisplayFor(model => model.IsAvailable)  
        </div>  
  
        <div class="display-label" style="font-family:Arial Black">  
            @Html.DisplayNameFor(model => model.Price)  
        </div>  
        <div class="display-field" style="color:Blue">  
            @Html.DisplayFor(model => model.Price)  
        </div>  
  
        <div class="display-label" style="font-family:Arial Black">  
            @Html.DisplayNameFor(model => model.ShelfId)  
        </div>  
        <div class="display-field" style="color:Blue">  
            @Html.DisplayFor(model => model.ShelfId)  
        </div>  
        <script>
			const button = document.getElementById('download-button');
			function generatePDF() {
				const element = document.getElementById(model);
				html2pdf().from(element).save();
			}

			button.addEventListener('click', generatePDF);
		</script>
    </fieldset>  
    <p style="color:Blue;font-family:Arial">  
        @Html.ActionLink("Back to Book Records", "ShowAllBookDetails")  
    </p>  
</body>  
</html>