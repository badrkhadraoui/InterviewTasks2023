@model InterviewTasks2023.Models.Book  
@{  
    Layout = null;  
}  
<!DOCTYPE html>  
<html>  
<head>  
    <meta name="viewport" content="width=device-width" />  
  
    <title>Edit</title>  
</head>  
<body>  
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>  
    <script src="~/Scripts/jquery.validate.min.js"></script>  
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>  
    @using (Html.BeginForm())  
    {  
        @Html.ValidationSummary(true)  
        <fieldset>  
            <legend style="font-family:Arial Black;color:Green">Book</legend>  
            @Html.HiddenFor(model => model.Code)  
            <div class="editor-label" style="font-family:Arial Black">  
                @Html.LabelFor(model => model.BookName)  
            </div>  
            <div class="editor-field" style="color:Red;font-family:Arial">  
                @Html.EditorFor(model => model.BookName)  
                @Html.ValidationMessageFor(model => model.BookName)  
            </div>  
            <div class="editor-label" style="font-family:Arial Black">  
                @Html.LabelFor(model => model.Author)  
            </div>  
            <div class="editor-field" style="color:Red;font-family:Arial">  
                @Html.EditorFor(model => model.Author)  
                @Html.ValidationMessageFor(model => model.Author)  
            </div>  
            <div class="editor-label" style="font-family:Arial Black">  
                @Html.LabelFor(model => model.IsAvailable)  
            </div>  
            <div class="editor-field" style="color:Red;font-family:Arial">  
                @Html.EditorFor(model => model.IsAvailable)  
                @Html.ValidationMessageFor(model => model.IsAvailable)  
            </div>  
            <div class="editor-label" style="font-family:Arial Black">  
                @Html.LabelFor(model => model.Price)  
            </div>  
            <div class="editor-field" style="color:Red;font-family:Arial">  
                @Html.EditorFor(model => model.Price)  
                @Html.ValidationMessageFor(model => model.Price)  
            </div>  
            <div class="editor-label" style="font-family:Arial Black">  
                @Html.LabelFor(model => model.ShelfId)  
            </div>  
            <div class="editor-field" style="color:Red;font-family:Arial">  
                @Html.EditorFor(model => model.ShelfId)  
                @Html.ValidationMessageFor(model => model.ShelfId)  
            </div>  
            <p>  
                <input type="submit" value="Save" style="color:Navy;font-family:Arial; font-size:large" />  
            </p>  
        </fieldset>  
    }  
    <div style="color:Blue;font-family:Arial">  
        @Html.ActionLink("Back to Book Records", "ShowAllBookDetails")  
    </div>  
</body>  
</html> 